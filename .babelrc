{
  "env": {
    "development": {
      "presets": ["env", "react", "stage-1"],
      "plugins": [
        ["emotion", { "sourceMap": true, "autoLabel": true }],
        [
          "transform-runtime",
          {
            "polyfill": false,
            "regenerator": true
          }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "env",
          {
            "es2015": {
              "modules": false
            },
            "targets": {
              "ie": 9,
              "uglify": true
            }
          }
        ],
        "react",
        "stage-1"
      ],
      "plugins": [
        ["emotion", { "hoist": true }],
        "react-hot-loader/babel",
        "transform-react-constant-elements",
        "transform-react-remove-prop-types"
      ]
    },
    "test": {
      "presets": ["env", "react", "stage-1"]
    }
  }
}
